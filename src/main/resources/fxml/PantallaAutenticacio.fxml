<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="presentacio.PantallaAutenticacioController"
      prefHeight="400.0" prefWidth="600.0" 
      alignment="CENTER" spacing="10">
   
   <!-- AUTENTICACIÓN LABEL -->
   <Label fx:id="lblAutenticacio" text="AUTENTICACIÓ" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
   
   <!-- USUARIO -->
   <HBox spacing="10" alignment="CENTER">
       <Label fx:id="lblUsuari" text="USUARI:" />
       <TextField fx:id="txtUsuari" prefWidth="200" />
   </HBox>

   <!-- ROL -->
   <HBox spacing="10" alignment="CENTER">
       <Label fx:id="lblRol" text="ROL:" />
       <TextField fx:id="txtRol" prefWidth="200" />
   </HBox>

   <!-- BOTÓN INICIAR SESIÓN -->
   <Button fx:id="btnIniciarSessio" text="INICIAR SESSIÓ" 
           onAction="#iniciarSessio" 
           style="-fx-font-size: 14px; -fx-padding: 10;" />
</VBox>
